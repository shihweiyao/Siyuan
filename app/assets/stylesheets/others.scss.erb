/*==================board member==================*/
.board_member{
	position:relative;
	margin-top: 70px;
}
.board_member_background_image{
	position:absolute;
	left:0;
	top:0;
	width: 100%;
	height: 100%;
	background: url('<%= asset_path 'bench.jpg' %>');
	background-size:cover;
	background-position: center center;
  	-webkit-filter: grayscale(.8);
  	filter: grayscale(.8);	
}
.board_member_container{
	background: #f4f4f4;
	padding: 30px;
	padding-bottom: 100px;	
}
.board_member_title{
	letter-spacing: 5px;
	font-size: 24px;
}	
.board_member_sub_title{
	color: #b3a253;
	font-size: 16px;
	margin-top: 30px;
	margin-bottom: 5px;	
}	
.board_member_content{
	letter-spacing: 1px;
	line-height: 20px;
}
.board_member_content_name{
	color: #000000;
}
