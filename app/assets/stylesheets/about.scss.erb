.grid-plan{
}
.grid-plan-item { 
  margin-bottom: 20px;
  visibility: hidden;
}

@media (max-width: $screen-md-min) {
	.grid-plan-item{
		padding: 0px;
	}
}

.grid-plan-item-content {
  min-height: 200px;
  background: #ffffff;
}
.grid-plan-item-close {
  font-size: 20px;
  z-index: 3;
  position: absolute;
  right: 40px;
  top: 10px;
  cursor: pointer;
  visibility: hidden;
}
.grid-plan-item.is-expanded {
  width: 100%;		
  z-index: 2;
}
.plan_card_enlarge{
  display: none;
  padding: 25px;
}
.plan_card_small{
  width: 100%;
  height: 200px;
  padding-left: 15px;
  padding-right: 15px;
  line-height: 200px;
  text-align: center;
  cursor: pointer;
  font-size: 18px;
  letter-spacing: 2px;
  -webkit-transition: all .3s;
  -moz-transition: all .3s;
  transition: all .3s;    
}
.plan_card_small_title{
  display: inline-block;
  vertical-align: middle;
  line-height: normal;
  padding: 10px;
}
.plan_card_small a{
  color: #ffffff; 
  -webkit-transition: all .3s;
  -moz-transition: all .3s;
  transition: all .3s;   
}
.no-touch .plan_card_small a:hover, .no-touch .plan_card_small a:focus{
  text-decoration: none;
  font-size: 22px;   
}
.plan_card_enlarge_title{
  font-size: 19px;	
}
.plan_card_enlarge_content{
	color: #878787;
	font-size: 15px;
	line-height: 25px;
}
/*=========================== grid-news-item.is-expanded ===================================*/

.grid-plan-item.is-expanded .grid-plan-item-close{
  visibility: visible;
}	
.grid-plan-item.is-expanded .plan_card_small{
  display: none;
}	
.grid-plan-item.is-expanded .plan_card_enlarge {
  display: block;
}	