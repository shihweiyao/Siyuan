.about_top{
  position:relative;	
}
.about_top_background_image{
	position:absolute;
	left:0;
	right:0;
	top:0;
	bottom:0;
	background: url('<%= asset_path 'about/background.jpg' %>');
	background-size:cover;
	background-position: center center;	
	z-index:1;
	-webkit-filter: blur(0px) grayscale(1);
    -moz-filter: blur(0px) grayscale(1);
    -o-filter: blur(0px) grayscale(1);
    -ms-filter: blur(0px) grayscale(1);
    filter: blur(0px) grayscale(1);	
}
/*=========================== quote ===================================*/
.about_quote{
	letter-spacing: 2px;
	font-size: 24px;
	margin-top: 260px;
}
.about_chairman_container{
	position: relative; 
	height: 600px;
}
.about_chairman_bg{
	position: absolute;
	right: 0px;
	height: 580px;	
	width: 460px;
	background-color: rgb(179, 162, 83);
	-webkit-clip-path: polygon(10% 60%, 93% 60%, 100% 40%, 100% 100%, 0 100%);
	clip-path: polygon(10% 60%, 93% 60%, 100% 40%, 100% 100%, 0 100%);
}
.about_chairman{
	position: absolute;
	right: 0px;	
	height: 550px;
	-webkit-clip-path: polygon(23% 0, 100% 0, 100% 68%, 87% 100%, 0 100%);
	clip-path: polygon(23% 0, 100% 0, 100% 68%, 87% 100%, 0 100%);	
	-webkit-filter: grayscale(.9);
    -moz-filter: grayscale(.9);
    -o-filter: grayscale(.9);
    -ms-filter:grayscale(.9);
    filter: grayscale(.9);	
}
.sign_chairman{
	margin-top: 30px;
	height: 70px;
}
.about_ceo_container{
	position: relative; 
	height: 600px;
}
.about_ceo_bg{
	position: absolute;
	left: 0px;
	height: 600px;	
	width: 470px;
	background-color: rgb(179, 162, 83);
	-webkit-clip-path: polygon(0 0, 100% 0, 93% 38%, 84% 38%, 72% 100%, 0 100%);
	clip-path: polygon(0 0, 100% 0, 93% 38%, 84% 38%, 72% 100%, 0 100%);
}
.about_ceo{
	position: absolute;
	left: 0px;
	height: 550px;	
	-webkit-clip-path: polygon(0 35%, 15% 0, 100% 0, 81% 100%, 0 100%);
	clip-path: polygon(0 35%, 15% 0, 100% 0, 81% 100%, 0 100%);
	-webkit-filter: grayscale(.9);
    -moz-filter: grayscale(.9);
    -o-filter: grayscale(.9);
    -ms-filter:grayscale(.9);
    filter: grayscale(.9);		
}
.sign_ceo{
	margin-top: 30px;
	height: 95px;
}
@media (max-width: $screen-md-min) {
	.about_quote{
		font-size: 22px;		
		margin-top: 70px;	
	}
	.sign_chairman{
		margin-bottom: 70px;	
	}	
	.about_chairman_bg{
		height: 450px;	
		width: 370px;
	}
	.about_chairman{
		height: 420px;	
	}	
	.about_chairman_container{
		height: 450px;
	}	
	.about_ceo_bg{
		height: 440px;	
		width: 305px;
	}
	.about_ceo{
		height: 400px;		
	}
	.sign_ceo{
		margin-top: 30px;
		height: 95px;
	}	
	.about_ceo_container{
		position: relative; 
