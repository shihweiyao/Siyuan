/*=========================== plan ===================================*/
.about_plan_main_container{
	padding: 30px !important;
	height: 420px;
	margin-bottom: 20px;
}
.about_plan_main_title{
	margin-top: 20px;
	font-size: 24px;	
	color: #ffffff;
}
.about_plan_main_content{
	margin-top: 30px;
	font-size: 15px;
	line-height: 25px;
}


.grid-plan{
}
.grid-plan-item { 
  margin-bottom: 20px;
}

@media (max-width: $screen-md-min) {
	.grid-plan-item{
		padding: 0px;
	}
}

.grid-plan-item-content {
  min-height: 200px;
  background: #ffffff;
}
.grid-plan-item-close {
  font-size: 20px;
  z-index: 3;
  position: absolute;
  right: 40px;
  top: 10px;
  cursor: pointer;
  visibility: hidden;
}
.grid-plan-item.is-expanded {
  width: 100%;		
  z-index: 2;
}
.plan_card_enlarge{
  display: none;
  padding: 25px;
}
.plan_card_small{
  height: 200px;
  padding-top: 80px;
  cursor: pointer;
}
.plan_card_small_title{
  font-size: 20px;
}
.plan_card_enlarge_title{
  font-size: 20px;	
}
.plan_card_enlarge_content{
	color: #878787;
	font-size: 15px;
	line-height: 25px;
}
/*=========================== grid-news-item.is-expanded ===================================*/

.grid-plan-item.is-expanded .grid-plan-item-close{
  visibility: visible;
}	
.grid-plan-item.is-expanded .plan_card_small{
  display: none;
}	
.grid-plan-item.is-expanded .plan_card_enlarge {
  display: block;
}	