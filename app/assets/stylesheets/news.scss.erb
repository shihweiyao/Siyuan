.grid-news{
	margin-top: 100px;
}
.grid-news-item { 
  margin-bottom: 20px;
}
.grid-news-item-content {
  min-height: 300px;
  background: #f4f4f4;
  border: 8px solid #ffffff;
  padding-top: 15px;
  padding-bottom: 15px;
}


.grid-news-item-close {
  font-size: 20px;
  z-index: 3;
  position: absolute;
  right: 40px;
  top: 10px;
  cursor: pointer;
  visibility: hidden;
  color: #878787;
}
.grid-news-item-button{
  color: #02a0eb !important;
  font-size: 16px;
  z-index: 3;
  position: absolute;
  right: 40px;
  bottom: 15px;
  cursor: pointer;  
}
.no-touch .grid-news-item-button:hover{
  color: #0279b1;  
}

.grid-news-item.is-expanded {
  width: 100%;		
  z-index: 2;
}
/*=========================== grid-news-item.is-expanded ===================================*/
.grid-news-item.is-expanded .grid-news-item-button{
  visibility: hidden;
}	
.grid-news-item.is-expanded .grid-news-item-close{
  visibility: visible;
}	
.grid-news-item.is-expanded .news_card_small{
  display: none;
}	
.grid-news-item.is-expanded .news_card_enlarge {
  display: block;
}	


/*=========================== card ===================================*/
.news_card_enlarge{
  display: none;
}
.news_card_padding{
	padding-bottom: 30px;
}
.news_card_small_title{
  margin-top: 15px;
  font-size: 20px;		
}
.news_card_small_content{
  font-size: 16px;	
  line-height: 30px;
  letter-spacing: 2px;
  color: #878787;
  margin-top: 10px;  
}

.news_card_small_img{
  margin-top: 10px;	
  padding-bottom: 56.25%; 
  width: 100%;
  /*background-image: url('<%= asset_path 'sample_2.jpg' %>');*/
  background-size: cover; 
  background-position: center center;	
}

.news_card_small_video { 
	position: relative; 
	margin-top: 10px;	
	padding-bottom: 56.25%; 
	height: 0; 
	overflow: hidden; 
	max-width: 100%; 
} 
.news_card_small_video iframe, 
.news_card_small_video object, 
.news_card_small_video embed { 
	position: absolute; 
	top: 0; 
	left: 0; 
	width: 100%; 
	height: 100%; 
}

.news_card_enlarge_title{
  margin-top: 15px;
  font-size: 20px;		
}
.news_card_enlarge_content{
  font-size: 16px;	
  line-height: 30px;
  letter-spacing: 2px;
  color: #878787;
  margin-top: 10px;
}
.news_card_enlarge_img{
  margin-top: 10px;	
  width: 100%;
}

.news_card_enlarge_video { 
	position: relative; 
	margin-top: 10px;	
	padding-bottom: 56.25%; 
	height: 0; 
	overflow: hidden; 
	width: 100%; 
} 
.news_card_enlarge_video iframe, 
.news_card_enlarge_video object, 
.news_card_enlarge_video embed { 
	position: absolute; 
	top: 0; 
	left: 0; 
	width: 100%; 
	height: 100%; 
}
