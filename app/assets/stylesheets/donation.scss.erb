/*=========================== sponsor ===================================*/
.donation_sponsor{
	font-size: 16px;
	position: relative;
	padding-top: 30px;
	color: #898989;
}
.donation_sponsor:after {
  content: "";
  position: absolute;
  left: 2%;
  top: 0;
  width: 96%;  /* or 100px */
  border-top: 1px solid rgb(221, 221, 221);
}
.donation_sponsor .glyphicon{
  cursor: pointer;	
}
.donation_sponsor_content{
	font-size: 14px;	
	color: #878787;
	transition: all .3s ease .15s; 	
}
.donation_sponsor_content_hidden{
    opacity: 0;
    height: 0;
    overflow: hidden;
}
.donation_sponsor_text {
	letter-spacing: 2px;
    text-align: center;
    text-transform: uppercase;
    width: 60%;
    float: left;
}
.donation_sponsor_text.no-span {
    display: table;
    white-space: nowrap;
    &:after {
      border-top: 1px solid #878787;
      content: '';
      display: table-cell;
      position: relative;
      top: 10px;
      width: 95%;
    }
    &:after { left: 5%; }
}

