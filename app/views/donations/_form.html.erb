<%= form_for(@donation) do |f| %>
	<div class="container" style="margin-top: 10mm">
	   <% if @donation.errors.any? %>
	    <div id="error_explanation">
	      <ul>
	      <% @donation.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	  </div>
	  <% end %>
	  <%= f.hidden_field :donate, value: true %>
	  <div class="form-group row">
	  	<label class="col-sm-offset-3 col-sm-2 control-label">聯絡人</label>
	  		<div class="col-sm-3">
	  			<%= f.text_field :name, class: "form-control", placeholder: "聯絡人" %>
	    	</div>
	  </div>
	  <div class="form-group row">
	  	<label class="col-sm-offset-3 col-sm-2 control-label">金額*</label>
	  		<div class="col-sm-3">
	  			<%= f.number_field :amount, class: "form-control", placeholder: "金額" %>
	    	</div>
	  </div>
	  <div class="form-group row">
			<label class="col-sm-offset-3 col-sm-2 control-label">捐款方式*</label>
			<div class="col-sm-3">
				<%= f.select :donate_way , options_for_select([["電匯", 0], ["線上刷卡", 1], ["其它", 2]], @donation.donate_way) , {prompt: '選擇捐款方式'}, class: "form-control" %>		
	  		</div>
	  </div>
	  <div class="form-group row">
			<label class="col-sm-offset-3 col-sm-2 control-label">計畫*</label>
			<div class="col-sm-3">
	  			<%= f.select :project_id , options_from_collection_for_select(Project.all, 'id', 'name', @donation.project_id),{prompt: '選擇計畫'} , class: "form-control"%>
	  		</div>
	  </div>
	  <div class="form-group row">
			<label class="col-sm-offset-3 col-sm-2 control-label">日期*</label>
			<div class="col-sm-3">
				<%= f.text_field :donate_date, class: "form-control", id: 'datetimepicker_donate_date', placeholder: "捐款日期" %>	
			</div>
		    <script type="text/javascript">
		            $(function () {
		                $('#datetimepicker_donate_date').datetimepicker({
							format : 'YYYY/MM/DD'		                
		                });
		            });
		    </script>	
		</div>
	<div class="form-group row">
	  	<label class="col-sm-offset-3 col-sm-2 control-label">抬頭</label>
	  		<div class="col-sm-3">
	  			<%= f.text_field :receipt_title, class: "form-control", placeholder: "抬頭" %>
	    	</div>
	</div>
	<div class="form-group row">
	  	<label class="col-sm-offset-3 col-sm-2 control-label">地址</label>
	  		<div class="col-sm-3">
	  			<%= f.text_field :receipt_address, class: "form-control", placeholder: "地址" %>
	    	</div>
	</div>
	<div class="form-group row">
	  	<label class="col-sm-offset-3 col-sm-2 control-label">說明</label>
	  		<div class="col-sm-3">
	  			<%= f.text_area :description, class: "form-control", placeholder: "說明" %>
	    	</div>
	</div>	
	<div class="form-group row">
	  	<label class="col-sm-offset-3 col-sm-2 control-label">電話</label>
	  		<div class="col-sm-3">
	  			<%= f.phone_field :phone, class: "form-control", placeholder: "電話" %>
	    	</div>
	</div>
	<div class="form-group row">
	  	<label class="col-sm-offset-3 col-sm-2 control-label">Email</label>
	  		<div class="col-sm-3">
	  			<%= f.email_field :email, class: "form-control", placeholder: "Email" %>
	    	</div>
	</div>
		<div class="form-group row">
			<div class="col-sm-offset-9 col-sm-2 pull-right-lg">
				<%= f.submit '儲存',  class: "btn btn-info save-btn"  %>
			</div>
		</div>
	</div>
<% end %>

