<div class="container" >
<%= form_for(@donation) do |f| %>
  <% if @donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
      <% @donation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  	<label class="col-sm-offset-1 col-sm-2 control-label">捐款人</label>
  		<div class="col-sm-6">
  			<%= f.text_field :name, class: "form-control", placeholder: "捐款人" %>
    	</div>
  	</div>
  </div>
  <div class="form-group">
  	<label class="col-sm-offset-1 col-sm-2 control-label">金額</label>
  		<div class="col-sm-6">
  			<%= f.number_field :amount, class: "form-control", placeholder: "金額" %>
    	</div>
  	</div>
  </div>
  <div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">方式</label>
		<div class="col-sm-6">
			<%= f.select :donate_way , options_for_select([["電匯", 1], ["支票", 2], ["現金", 3]], @donation.donate_way), {include_blank: true}, class: "form-control" %>		
		</div>
	</div>
  <div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">捐款日期</label>
		<div class="col-sm-6">
			<%= f.text_field :donate_date, class: "form-control", id: 'datetimepicker_donate_date', placeholder: "捐款日期" %>	
		</div>
	    <script type="text/javascript">
	            $(function () {
	                $('#datetimepicker_donate_date').datetimepicker({
						format : 'YYYY/MM/DD'		                
	                });
	            });
	    </script>	
	</div>
	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-6">
			<%= f.submit '儲存',  class: "btn btn-primary"  %>
		</div>
	</div
<% end %>
</div>
