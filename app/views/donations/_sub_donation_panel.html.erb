<%= link_to donation_path(donation) do %>
	<div class="col-md-2">
	  <table class="table donation_backend_table">
	  	<tbody>
	      <tr>
	        <th>捐款人: </th>
	        <td><%= donation.name %></td>
	      </tr>
	      <tr>
	        <th>金額: </th>
	        <td><%= donation.amount %></td>
	      </tr>
	      <tr>
	        <th>方式: </th>
	        <td><%= Hash[donateWayOptions].rassoc(donation.donate_way).first %></td>
	      </tr>
	    </tbody>
	  </table>
	</div>
<% end %>