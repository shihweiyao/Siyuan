<div class="container">
	<div class="row">
		<h3>忘記密碼</h3>
	</div>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="container" style="margin-top: 10mm">
  <%= devise_error_messages! %>

    <div class="form-group row">
        <label class="col-sm-offset-1 col-sm-2 control-label">Email</label>
        <div class="col-sm-4"><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email'%></div>
    </div>

    <div class="form-group row">
		<div class="col-sm-offset-6 col-sm-10">
			<%= f.submit '寄信',  class: "btn btn-default" %>
		</div>
  	</div>
</div>
<% end %>

