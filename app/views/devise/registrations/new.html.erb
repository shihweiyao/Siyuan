<div class="container">
	<div class="row">
		<h3>新增使用者</h3>
	</div>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container" style="margin-top: 10mm">
  <%= devise_error_messages! %>

    <div class="form-group row">
      <label class="col-sm-offset-2 col-sm-2 control-label">Email</label>
      <div class="col-sm-4"><%= f.email_field :email, autofocus: true , value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control", placeholder: 'Email'%></div>
    </div>
	<div class="form-group row">
		<div class="col-sm-offset-9 col-sm-2 pull-right-lg">
			<%= f.submit '寄信',  class: "btn btn-info save-btn" %>
		</div>
  	</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "重寄註冊信", new_confirmation_path(resource_name) %><br />
<% end -%>
</div>
