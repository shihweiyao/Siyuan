						  	<%= text_field_tag 'amount', nil, class: 'form-control', placeholder: '或輸入您想捐款的金額'%>
							<%= submit_tag '捐款', class: "btn btn-default donation_button" %>
						</div>  

					<% end -%>					
				</div>				
			</div>	
			<div class="row donation_sponsor" style="">
				<div class="col-sm-10 col-sm-offset-1">	
					<div class="text-center">捐款名冊 <span class="glyphicon glyphicon-triangle-bottom" id="<%= id_id_id%>"></span></div>
