					<%= form_tag('/trades/donate', class: "donation_form") do -%>
						<%= hidden_field_tag 'id', id_id_id, class: 'form-control'%>
						<div for="exampleInputEmail1">收據</div> 
						<div class="btn-group donation_btn_group" data-toggle="buttons">
			                <label class="btn btn-default donation_gray_btn">
			                    <input type="radio" name="receipt" autocomplete="off" value="true" id="<%= id_id_id %>" /> 是                
			                </label> 
			                <label class="btn btn-default donation_gray_btn">
