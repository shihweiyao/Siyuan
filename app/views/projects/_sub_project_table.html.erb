<%= link_to project_path(project, :pj_kind => project.kind) do %>
	<div class="col-md-4">
		<table class="table backend_index_table">
			<tbody>
		      <tr>
		        <td><%= project.name %></td>
		      </tr>
		      <%if project.kind.to_i == GLOBAL_VAR['project_self'].to_i %>
		      <tr>
		        <td style="text-align:center;">
		        	<% if project.pj_cover.exists? %>
				 		<%= image_tag project.pj_cover.url, class: "backend_index_table_image"%>
				 	<% else %>
				 		<%= image_tag "/assets/noPhoto-icon.png" , class: "backend_index_table_image"%>
				 	<% end %>
		        </td>
		      </tr>
		      <%end%>
	    	</tbody>
	  	</table>
	</div>
<% end %>