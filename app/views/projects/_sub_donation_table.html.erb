<%= link_to donation_path(donation) do %>
	<div class="col-md-4">
	  <table class="table backend_index_table">
	  	<tbody>
	      <tr>
	        <th>抬頭: </th>
	        <td><%= donation.receipt_title %></td>
	      </tr>
	      <tr>
	        <th>金額: </th>
	        <td><%= number_with_delimiter donation.amount || 0%>元</td>
	      </tr>
	      <tr>
	        <th>捐款方式: </th>
	        <td><%= Hash[donateWayOptions].rassoc(donation.donate_way).first %></td>
	      </tr>
	      <tr>
	      	<% if donation.donate %>
	      		<th>已捐款</th>
	      	<% else %>
	      		<th>尚未捐款</th>
	      	<% end %>
	      </tr>
	      <tr>
	    </tbody>
	  </table>
	</div>
<% end %>