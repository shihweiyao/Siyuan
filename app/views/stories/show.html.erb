<div class="container" style="margin-bottom: 20px;">
  <div class="row">
	<h3 class="col-md-offset-2 col-md-8">最新消息</h3>
  </div>
</div>
<div class="container">
	<div class="row">	
		<div class="col-md-10">
			<%= link_to '刪除', @story, method: :delete, data: { confirm: '確定要刪除嗎?' } , class: 'delete-btn pull-right'%>			
			<%= link_to '編輯', edit_story_path(@story) , data: { no_turbolink: true }, class: 'edit-btn pull-right', style: 'margin-right: 20px;'%> 
		</div>
	</div>
</div>
<div class="container" style="margin-top: 23px;">
	<% unless @story.pictures.blank? %>
	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<div id="myCarousel" class="carousel slide" data-ride="carousel">
			  <!-- Indicators -->
			  <ol class="carousel-indicators">
			    <% @story.pictures.each_with_index do |p, i|%> 
					<%if i==0 %>
						<li data-target="#carousel-example-generic" data-slide-to="<%=i%>" class="active"></li>
					<% else %>
					    <li data-target="#carousel-example-generic" data-slide-to="<%=i%>"></li>    
					<% end %>
				<% end %> 
			  </ol>
			
			  <!-- Wrapper for slides -->
			  <div class="story_carousel-inner carousel-inner" role="listbox">
			  	<% @story.pictures.each_with_index do |p, i| %>
				  	<% if i==0 %>
					    <div class="item active">
					      <div class="story_carousel_img" style="background-image: url('<%=p.image.url%>')"></div>
					    </div>
				    <% else %>
						<div class="item">
					      <div class="story_carousel_img" style="background-image: url('<%=p.image.url%>')"></div>
					    </div>	    
				    <% end %>
			    <% end %>
			  </div>
			
			  <!-- Left and right controls -->
			  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" style="border-radius: 23px;">
			    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" style="border-radius: 23px;">
			    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			    <span class="sr-only">Next</span>
			  </a>
			</div>
		</div>
	</div>
	<% end %>
	<div class="row" style="margin-top: 23px;">
	  	<div class="col-md-offset-2 col-md-2 show-title">標題</div>
	  	<div class="col-md-4 show-content"> <%= @story.topic %></div>
	</div>
	<div class="row">
	  	<div class="col-md-offset-2 col-md-2 show-title">英文標題</div>
	  	<div class="col-md-4 show-content"> <%= @story.topic_en %></div>
	</div>
	<div class="row">
	  	<div class="col-md-offset-2 col-md-2 show-title">描述</div>
	  	<div class="col-md-4 show-content"> <%= @story.description %></div>
	</div>
	<div class="row">
	  	<div class="col-md-offset-2 col-md-2 show-title">英文描述</div>
	  	<div class="col-md-4 show-content"> <%= @story.description_en %></div>
	</div>
	<div class="row">
	  <div class="col-md-2 col-md-offset-2 show-title">Youtube嵌入碼</div>
	  <div class="col-md-5" style="padding: 23px;"><%= show_video(data: @story.video_url) %> </div>
	</div>
</div>

