<div class="container">
	<%= form_for(@user, html: {class: "form-horizontal", role: "form"}) do |f| %>
	<div class="form-group">
		<label class="col-sm-2 control-label">Email</label>
		<div class="col-sm-10">
			<%= f.email_field :email, class: "form-control", placeholder: 'Email' %>						
		</div>
		<label class="col-sm-2 control-label">舊密碼*</label>
		<div class="col-sm-10">
			<%= f.password_field :current_password, class: "form-control", placeholder: '舊密碼' %>						
		</div>
		<label class="col-sm-2 control-label">新密碼*</label>
		<div class="col-sm-10">
			<%= f.password_field :password, class: "form-control", placeholder: '新密碼' %>						
		</div>
		<label class="col-sm-2 control-label">新密碼確認*</label>
		<div class="col-sm-10">
			<%= f.password_field :password_confirmation, class: "form-control", placeholder: '新密碼確認' %>						
		</div>
		<div class="form-group">
		<div class="col-sm-offset-10 col-sm-2">
			<%= f.submit '送出',  class: "btn btn-default"  %>
		</div>
	</div>
	</div>
	<% end %>
</div>
