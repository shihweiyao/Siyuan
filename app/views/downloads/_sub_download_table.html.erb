	<div class="col-md-4">
	  <table class="table backend_index_table">
	  	<tbody>
	      <tr>
	        <td colspan="2"><%= download.title %></td>
	      </tr>
	      <tr style="text-align: center;">
	      	<td colspan="2">
	      		<% unless download.file_at_file_name.blank? %><%= link_to download.file_at_file_name, download.file_at.url(:original, false) %><% end %>
	      	</td>
	      </tr>
	      <tr style="text-align: center;">
		    <td colspan="2"><%= link_to "編輯", edit_download_path(download), data: { no_turbolink: true }, class: 'btn btn-default edit-btn', style: "margin-right:24px;" %><%= link_to '刪除', download, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger delete-btn', style: "margin-left:24px;"%></td>
	      </tr>
	    </tbody>
	  </table>
	</div>
