<div class="container">
	<div class="row">
		<h3>相關連結</h3>
	</div>
</div>
<div class="container-fluid">
	<div class="row">	
		<div class="col-md-offset-9">
			<%= link_to "新增", new_link_path, class: 'btn btn-info add-btn' %>
		</div>
	</div>
</div>
<div class="container" style="margin-top: 12px;">
	<div class="col-md-offset-1 col-md-9">
			<table class="table table-striped table-hover">
				<tbody>
					<% @links.each do |link| %>
					<tr>
						<td class="link-td"><%= link.name %></td>
        				<td class="link-td"><%= link.web_addr %></td>
        				<td>
        					<%= link_to '刪除', link, method: :delete, data: { confirm: '確定要刪除?' } , class: 'btn btn-danger delete-btn pull-right' , style: "margin-right: 12px;"%>
        					<%= link_to "編輯", edit_link_path(link), class: 'btn btn-default edit-btn pull-right', style: "margin-right: 5px;" %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
	</div>
</div>

